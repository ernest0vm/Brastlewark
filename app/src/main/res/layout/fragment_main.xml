                            app:layout_constraintBottom_toBottomOf="@+id/fabCont3"
                            app:layout_constraintEnd_toEndOf="@+id/fabCont3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fabCont2"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/recycler_view"
                    app:layout_constraintEnd_toEndOf="@+id/recycler_view">

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="@string/find2"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorAccent" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/ic_search_black_24dp"
                            app:fabCustomSize="32dp"
                            app:layout_constraintBottom_toBottomOf="@+id/fabCont2"
                            app:layout_constraintEnd_toEndOf="@+id/fabCont2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fabCont1"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="42dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/floatingMenu"
                    app:layout_constraintEnd_toEndOf="@+id/floatingMenu">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="@string/find1"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorAccent" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/ic_search_black_24dp"
                            app:fabCustomSize="32dp"
                            app:layout_constraintBottom_toBottomOf="@+id/fabCont1"
                            app:layout_constraintEnd_toEndOf="@+id/fabCont1" />
                </LinearLayout>

        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@android:drawable/ic_search_category_default"
            android:tint="@android:color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/recycler_view"
            app:layout_constraintEnd_toEndOf="@+id/recycler_view" />

</android.support.constraint.ConstraintLayout>